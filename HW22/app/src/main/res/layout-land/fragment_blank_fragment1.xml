<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag1"
    tools:context="com.example.sangeeta.hw2.BlankFragment1"
    android:background="#FFFFFF" android:scaleType="fitXY" >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/andcont"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#29A9D2"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <Button
            android:id="@+id/aboutme"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:background="@drawable/thefile"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#29A9D2">


            <Button
                android:id="@+id/task1"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:background="@drawable/thefile3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                />

            <Button
                android:id="@+id/task2"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:background="@drawable/thefile2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
