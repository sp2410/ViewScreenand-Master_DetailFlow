<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp" android:layout_height="match_parent"
    >
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    tools:context="com.example.sangeeta.hw2.Movie_List">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#29A9D2" android:scaleType="fitXY"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/andcont">

        <Button
            android:id="@+id/avatar"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/avatar"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            />

        <Button
            android:id="@+id/titanic"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/titanic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            />
        <Button
            android:id="@+id/avenger"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/avengers"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            />

        <Button
            android:id="@+id/knight"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/dark_knight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            />

        <Button
            android:id="@+id/star"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/star_wars1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            />
        <Button
            android:id="@+id/star2"
            android:layout_height="200dp"
            android:layout_width="170dp"
            android:background="@drawable/star_wars4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"

            />


    </LinearLayout>

</FrameLayout>

</ScrollView>
